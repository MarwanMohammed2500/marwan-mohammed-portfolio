{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "./",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true
  },
    "include": [
    "server/**/*",
    "vite.config.ts",
    "shared/**/*"
  ],
  "exclude": [
    "client",
    "node_modules",
    "**/*.test.ts"
  ]
}
